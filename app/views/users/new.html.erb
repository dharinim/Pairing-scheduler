<h1>Registration</h1>

    <%= form_for(@user) do |f| %>

      <%= f.label :name %><br>
      <%= f.email_field :name %><br>

      <%= f.label :email %><br>
      <%= f.email_field :email %><br>

      <%= f.label :password %><br>
      <%= f.password_field :password %><br>
      <%= f.password_field :password_confirmation %><br>

      <%= f.submit "SignUp" %>
    <% end %>

