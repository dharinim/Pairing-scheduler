<h1>Registration</h1>
	<div id="container">
		<%= form_for(@user) do |f| %>
			<%= f.label :name %><br>
			<%= f.text_field :name %><br>
			<%= f.label :phase %><br>
			<%= f.select :phase,options_for_select([0, 1, 2, 3, 4]) %><br>
			<%= f.label :is_mentor, "Roll" %><br>
			<%= f.radio_button :is_mentor, true %> Mentor <br>
			<%= f.radio_button :is_mentor, false %> Student <br>
			<%= f.label :email %><br>
			<%= f.email_field :email %><br>
 			<%= f.label :password %><br>
			<%= f.password_field :password %><br>
					<%= f.label :password_confirmation %><br>
					<%= f.password_field :password_confirmation %><br>
			<%= f.label :password_confirmation %><br>
			<%= f.password_field :password_confirmation %><br><br>
				<%= f.submit "Sign Up", class: "btn btn-primary" %>
		<% end %>

	</div>
